CONFIG_VENDOR_PRODRIVE=y
CONFIG_BOARD_PRODRIVE_HERMES=y
CONFIG_MAINBOARD_SMBIOS_MANUFACTURER="Prodrive Techonologies B.V."
CONFIG_POST_IO=y
#CONFIG_USE_LEGACY_8254_TIMER=y
CONFIG_HERMES_USES_SPS_FIRMWARE=y
CONFIG_GENERIC_LINEAR_FRAMEBUFFER=y
#CONFIG_SMMSTORE=y
#CONFIG_SMMSTORE_V2=y
CONFIG_DEFAULT_CONSOLE_LOGLEVEL_8=y
CONFIG_POST_DEVICE_LPC=y
CONFIG_MAINBOARD_SERIAL_NUMBER="N/A"

CONFIG_CBFS_SIZE=0x900000
CONFIG_CONSOLE_CBMEM_BUFFER_SIZE=0x20000
CONFIG_CONSOLE_USE_LOGLEVEL_PREFIX=y

CONFIG_UART_PCI_ADDR=0x0
CONFIG_VALIDATE_INTEL_DESCRIPTOR=y

CONFIG_SUBSYSTEM_VENDOR_ID=0x0000
CONFIG_SUBSYSTEM_DEVICE_ID=0x0000
#CONFIG_HAVE_ME_BIN=y
#CONFIG_CHECK_ME=y
#CONFIG_USE_ME_CLEANER=y


CONFIG_TPM_MEASURED_BOOT=y
CONFIG_TPM_MEASURED_BOOT_INIT_BOOTBLOCK=y
CONFIG_TPM_STARTUP_IGNORE_POSTINIT=y
CONFIG_TPM_MEASURED_BOOT_ADDITIONAL_FILES="etc/grub.cfg etc/trusted.pub etc/ascii.pf2"

CONFIG_PAYLOAD_GRUB2=y
CONFIG_GRUB2_REVISION=y

# the following seems not to work with current coreboot master ?
#CONFIG_GRUB2_GIT_REPOSITORY="../../../../grub2"
CONFIG_GRUB2_REVISION_ID="HEAD"
CONFIG_GRUB2_EXTRA_MODULES="xhci usb_keyboard ahci part_gpt part_msdos nativedisk gcry_rsa gcry_sha512 csl pgp sbs sleep read"

# currently done using cbfstool
#CONFIG_GRUB2_INCLUDE_RUNTIME_CONFIG_FILE=y

CONFIG_INTEL_CBNT_LOGGING=y
CONFIG_INTEL_BG_SUPPORT=y
# CONFIG_INTEL_BG_KM_ONLY_UNSIGNED is not set
# CONFIG_INTEL_BG_BG_PROV_KM_USE_CFG_FILE is not set
# CONFIG_INTEL_BG_BPM_ONLY_UNSIGNED is not set
# CONFIG_INTEL_BG_BG_PROV_BPM_USE_CFG_FILE is not set
# CONFIG_INTEL_BG_PROV_EXTERNAL_BIN is not set
# CONFIG_INTEL_BG_BG_PROV_CFG_FILE="bpm_cfg.json"
CONFIG_INTEL_BG_KM_PRIV_KEY_FILE="misc/oem_key.pem"
CONFIG_INTEL_BG_BPM_PRIV_KEY_FILE="misc/oem_key.pem"
CONFIG_INTEL_BIOSACM_FILE="misc/acm.bin"

#
# KM options
#
CONFIG_INTEL_BG_KM_VERSION=1
CONFIG_INTEL_BG_KM_SVN=0
CONFIG_INTEL_BG_KM_ID=1
# end of KM options

#
# BPM options
#
CONFIG_INTEL_BG_BPM_VERSION=1
CONFIG_INTEL_BG_BPM_SVN=0
CONFIG_INTEL_BG_ACM_SVN=2
CONFIG_INTEL_BG_PBET=15
CONFIG_INTEL_BG_IBB_FLAGS=10
CONFIG_INTEL_BG_SINIT_SVN=0
CONFIG_INTEL_BG_PD_INTERVAL=60
# end of BPM options
